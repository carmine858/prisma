<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Prisma News</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Prisma.styles.css" asp-append-version="true" />
    <link rel="icon" type="image/x-icon" href="~/favicon.ico">
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="@(ViewData["HideNavbar"] != null ? "no-navbar" : "")">
    @if (ViewData["HideNavbar"] == null)
    {
        <header>
            <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
                <div class="container">
                    <a class="navbar-brand" href="/">
                        <img src="~/img/prisma-logo.png" alt="Prisma News" height="40" class="d-inline-block align-text-top me-2" onerror="this.src='/img/prisma-logo-fallback.svg'">
                        <span class="brand-text">Prisma News</span>
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link @(Context.Request.Path == "/" ? "active" : "")" aria-current="page" href="/">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(Context.Request.Path == "/News" ? "active" : "")" href="/css/analysis.css">Analisi</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(Context.Request.Path == "/Esplorazioni" ? "active" : "")" href="/Esplorazioni">Esplorazioni</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Strumenti
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" href="/Strumenti/Bias">Analisi Bias</a></li>
                                    <li><a class="dropdown-item" href="/Strumenti/Framing">Framing Detector</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="/Strumenti/Retorica">Tecniche Retoriche</a></li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(Context.Request.Path == "/Info" ? "active" : "")" href="/Info">Info</a>
                            </li>
                        </ul>

                        <partial name="_LoginPartial" />

                        <div class="d-flex theme-switch-wrapper ms-2">
                            <i class="bi bi-brightness-high theme-icon light-icon"></i>
                            <div class="form-check form-switch mb-0 ms-1 me-1">
                                <input class="form-check-input" type="checkbox" id="themeSwitch">
                            </div>
                            <i class="bi bi-moon theme-icon dark-icon"></i>
                        </div>
                    </div>
                </div>
            </nav>
        </header>
    }

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    @if (ViewData["HideFooter"] == null)
    {
        <footer class="footer text-center text-md-start">
            <div class="container py-4">
                <div class="row">
                    <div class="col-md-4 mb-4 mb-md-0">
                        <h5>Prisma News</h5>
                        <p class="mb-0 text-muted">
                            Il decostruttore di notizie che analizza bias, framing, tecniche retoriche e propone contro-argomentazioni.
                        </p>
                    </div>
                    <div class="col-md-2 mb-4 mb-md-0">
                        <h6>Link Utili</h6>
                        <ul class="nav flex-column">
                            <li class="nav-item"><a href="/" class="nav-link px-0 text-muted">Home</a></li>
                            <li class="nav-item"><a href="/Analisi" class="nav-link px-0 text-muted">Analisi</a></li>
                            <li class="nav-item"><a href="/Info" class="nav-link px-0 text-muted">Chi siamo</a></li>
                        </ul>
                    </div>
                    <div class="col-md-2 mb-4 mb-md-0">
                        <h6>Assistenza</h6>
                        <ul class="nav flex-column">
                            <li class="nav-item"><a href="/FAQ" class="nav-link px-0 text-muted">FAQ</a></li>
                            <li class="nav-item"><a href="/Contatti" class="nav-link px-0 text-muted">Contatti</a></li>
                            <li class="nav-item"><a href="/Privacy" class="nav-link px-0 text-muted">Privacy</a></li>
                        </ul>
                    </div>
                    <div class="col-md-4">
                        <h6>Seguici</h6>
                        <div class="social-links">
                            <a href="#" class="me-2" aria-label="Twitter"><i class="bi bi-twitter"></i></a>
                            <a href="#" class="me-2" aria-label="Facebook"><i class="bi bi-facebook"></i></a>
                            <a href="#" class="me-2" aria-label="Instagram"><i class="bi bi-instagram"></i></a>
                            <a href="#" aria-label="LinkedIn"><i class="bi bi-linkedin"></i></a>
                        </div>
                        <div class="mt-3">
                            <form class="newsletter-form">
                                <div class="input-group">
                                    <input type="email" class="form-control" placeholder="La tua email" aria-label="Email">
                                    <button class="btn btn-outline-primary" type="button">Iscriviti</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <hr class="my-4">
                <div class="d-flex flex-column flex-md-row justify-content-between align-items-center">
                    <p class="mb-2 mb-md-0">© @DateTime.Now.Year Prisma News. Tutti i diritti riservati.</p>
                    <ul class="nav footer-links">
                        <li class="nav-item"><a href="/termini-condizioni" class="nav-link px-2 text-muted">Termini</a></li>
                        <li class="nav-item"><a href="/privacy" class="nav-link px-2 text-muted">Privacy</a></li>
                        <li class="nav-item"><a href="/cookie" class="nav-link px-2 text-muted">Cookie</a></li>
                    </ul>
                </div>
            </div>
        </footer>
    }

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>