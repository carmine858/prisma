@page
@model Prisma.Pages.Account.LogoutModel
@{
    ViewData["Title"] = "Logout";
}

<div class="container logout-container animate__animated animate__fadeIn">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-8 col-sm-10">
            <div class="card auth-card">
                <div class="card-header text-center p-4">
                    <div class="logout-icon mb-3">
                        <i class="bi bi-box-arrow-left"></i>
                    </div>
                    <h2 class="card-title mb-1">Logout</h2>
                    <p class="text-muted">Sei sicuro di voler uscire?</p>
                </div>
                <div class="card-body p-4 text-center">
                    <p>Stai per disconnetterti dal tuo account Prisma News.</p>

                    <form method="post" class="mt-4">
                        <div class="d-flex justify-content-center gap-3">
                            <a href="/" class="btn btn-outline-secondary btn-lg px-4">Annulla</a>
                            <button type="submit" class="btn btn-danger btn-lg px-4">Conferma Logout</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>